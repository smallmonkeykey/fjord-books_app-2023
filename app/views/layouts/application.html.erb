<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:action] %>">
      <header>
      <% if user_signed_in? %>
        <li>
          <%= link_to t('defaults.books'),books_path %>
        </li>
        <li>
          <%= link_to t('defaults.users'),users_path %>
        </li>
        <li>
          <%= link_to t('defaults.editprofile'),edit_user_registration_path %>
        </li>
        <li>
          <%= link_to t('defaults.logout'), destroy_user_session_url, data: { turbo_method: :delete } %>
        </li>
      <% else %>
        <li>
          <%= link_to t('defaults.signup'), new_user_registration_path %>
        </li>
        <li>
          <%= link_to t('defaults.signin'), new_user_session_path %>
        </li>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
