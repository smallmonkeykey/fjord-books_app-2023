<p style="color: green"><%= notice %></p>

<h1><%= Book.model_name.human.pluralize(I18n.locale) %></h1>

<div id="books" class="index-items">
  <% @books.each do |book| %>
   <div class="index-item">
    <%= render book %>
    <p>
      <%= link_to (t :show_this_book), book %>
    </p>
   </div>
  <% end %>
</div>

<nav class="page-nav">
  <%= link_to (t :new_book), new_book_path %>
</nav>
